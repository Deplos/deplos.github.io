@import "../abstracts/variables"
@import "../abstracts/mixins"
@import "../components/input"
@import "../components/tag"

h2
    text-align center
    margin-bottom 20px

.input
    max-width 400px
    width 100%
    margin 0 auto

.guides
    display flex
    flex-wrap wrap
    gap 20px
    justify-content center

    &__not-found
        display none
        text-align center

    &.empty
        .guides__not-found
            display inline





.guide
    max-width 400px
    // width 100%
    flex-basis 0 
    min-width 250px
    display block
    flex-grow 1

    &__info
        display flex
        justify-content space-between
        gap 12px

    &__title
        margin-top 12px
    
    &__date
        color colors.gray

    &__image
        width 100%
        height 200px
        display grid
        place-items center
        font-size 24px
        border-radius 5px
        font-weight 500
        color colors.gray
        margin-bottom 12px
        object-fit cover

        &:not(.loaded)
            border 1px solid colors.border


        