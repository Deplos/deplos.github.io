.button
    display inline-block
    padding 10px 20px
    border 1px solid colors.gray
    border-radius 5px
    font-weight 500
    color colors.gray
    cursor pointer
    transition: border-color 0.2s ease-in-out, color 0.2s ease-in-out

    &--secondary
        color colors.gray
        border-color colors.border

    &:not(:disabled):hover
        border-color colors.white
        color colors.white

    &:disabled
        opacity 0.5
        cursor default
