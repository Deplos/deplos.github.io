.input
    position relative
    width 100%
    min-height 40px

    textarea
    input
        background-color colors.background
        width 100%
        height 100%
        border 1px solid colors.border
        border-radius 5px
        transition border-color 0.2s ease-in

        &:hover
            border-color colors.white
        
        &:focus ~ label
        &:valid ~ label
        &:not(:placeholder-shown) ~ label
            top 0
            font-size 14px

        &:invalid:not(:placeholder-shown)
            border-color colors.error

    textarea
        padding 8px 12px
        min-height 40px
        max-height 400px
        resize: vertical;

    input
        position absolute
        padding-left 12px
        display grid
        place-items: center
        display inline-block
        top 0
        left 0

    label
        position absolute
        display flex
        align-items center
        left 12px
        top 20px
        transform translateY(-50%)
        pointer-events: none
        color colors.gray
        background-color colors.background
        transition top 0.2s ease

.checkbox 
    display flex
    gap 12px
    align-items center

    input
        appearance: none
        margin 0
        min-width 20px
        aspect-ratio 1
        border 1px solid colors.border
        display block
        border-radius 4px
        cursor pointer
        transition border-color 0.2s ease, background-color 0.2s ease

        &:hover
            border-color: colors.white;

        &:checked
            background-color colors.gray
            border none


    label 
        color colors.gray;

        a 
            text-decoration underline
